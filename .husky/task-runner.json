{
  "tasks": [
    {
      "name": "prettier",
      "command": "npx",
      "args": ["prettier", "--check", "--ignore-unknown", "${staged}"]
    },
    {
      "name": "dotnet format",
      "command": "dotnet",
      "args": ["format", "--verify-no-changes", "--no-restore", "--severity", "warn", "--include", "${staged}"],
      "include": ["**/*.cs"]
    },
    {
      "name": "tsc",
      "command": "npx",
      "args": ["tsc-files", "--noEmit", "${staged}"],
      "include": ["**/*.ts", "**/*.tsx"]
    }
  ]
}
